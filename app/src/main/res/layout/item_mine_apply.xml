<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 申请店主的布局 -->
    <FrameLayout
        android:id="@+id/fl_apply_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="12dp"
        app:layout_goneMarginTop="50dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="parent"
        >

        <!-- 申请成为店主 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/apply_shopkeeper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            >

            <ImageView
                android:id="@+id/apply_shopkeeper_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@mipmap/icon_normal_shop_apply_bg"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_update_shop_manager_btn"
                android:layout_width="84dp"
                android:layout_height="30dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/update_manager_btn_shape"
                android:gravity="center"
                android:text="@string/mine_text_apply_now"
                android:textColor="@color/ec_color_F1D6A5"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>



        <!-- 申请成为卓越店主 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_apply_brilliant_shop_mg"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@mipmap/icon_brilliant_shop_manager"
            android:visibility="gone"
            >



            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_apply_brilliant_shop"
                android:layout_width="84dp"
                android:layout_height="30dp"
                android:layout_marginEnd="16dp"
                android:src="@mipmap/icon_apply_brilliant_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>